    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        // TODO add your handling code here:
        if(evt.getSource()== jButton1){
            
                int res=(int)(Math.random()*6)+1;
                jTextField1.setText(res+"");
                list.add(res);
        }
    }//GEN-LAST:event_jButton1ActionPerformed

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        // TODO add your handling code here:
        if(evt.getSource()== jButton2){
            double[] array=new double[6];
            for(int i=1;i<=6;i++){
                int count=0;
                for(int j=0;j<list.size();j++){
                      if(list.get(j)==i){
                          count++;
                      }
                }
                 double temp=count*1.0/list.size();
                BigDecimal bg = new BigDecimal(temp);  
                array[i-1] = bg.setScale(3, BigDecimal.ROUND_HALF_UP).doubleValue();  
            }

            for(int val:list){
                System.out.print(val+"  ");
            }
            System.out.println();
            for(double val:array){
                System.out.print(val+"  ");
            }
            System.out.println();
            for(int i=0;i<6;i++){
               int x= i*40;
               int heigth=(int) (array[i]*500);                       
               jPanel1.getGraphics().drawRect(x, 0, 20, heigth);

            }
           
        }
    }//GEN-LAST:event_jButton2ActionPerformed

